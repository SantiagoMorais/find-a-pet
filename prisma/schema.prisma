datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Organization {
    id         String   @id @default(cuid())
    name       String
    owner      String
    email      String
    address    String
    cep        Decimal
    whatsapp   Decimal
    password   String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    pets Pet[]

    @@map("organizations")
}

model Pet {
    id                    String   @id @default(cuid())
    name                  String
    description           String
    specie                Specie
    age                   Age
    size                  Size
    energy_level          Decimal
    independency_level    Decimal
    space_requirement     Decimal
    photos                String[]
    adoption_requirements String[]

    organization    Organization @relation(fields: [organization_id], references: [id])
    organization_id String

    @@map("pets")
}

enum Specie {
    DOG
    CAT
    BIRD
    OTHER
}

enum Age {
    PUPPY
    ADULT
    SENIOR
}

enum Size {
    SMALL
    MEDIUM
    LARGE
}
